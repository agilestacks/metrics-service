apiVersion: v1
kind: Service
metadata:
  name: ${component.metrics-service.name}
  namespace: ${component.metrics-service.namespace}
  labels:
    provider: agilestacks.com
    project: metrics-service
    kubernetes.io/name: metrics-service
    kubernetes.io/cluster-service: "true"
spec:
  ports:
  - name: http
    port: 80
    targetPort: 3001
    protocol: TCP
  selector:
    provider: agilestacks.com
    project: metrics-service
    qualifier: api
